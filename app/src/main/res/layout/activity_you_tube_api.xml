<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_you_tube_api"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_two"
    tools:context="com.example.x1243.littlethings.YouTubeAPI">

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ll_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information Page"
        android:textColor="#34A180"
        android:textSize="30dp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <view
        android:id="@+id/youtube_view"
        class="com.google.android.youtube.player.YouTubePlayerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/title_tv"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PLAY_VIDEO"
        android:text="PLAY VIDEO"
        android:src="@mipmap/ic_play_arrow_black_48dp"
        android:textColor="#34A180"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/youtube_view"
        android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/title_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Useful Contacts"
            android:textColor="#34A180"
            android:textSize="20dp"
            android:layout_below="@+id/PLAY_VIDEO"
            android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_tv2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/samaritans_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_tv2"
                android:text="Samaritans"
                android:textColor="#34A180"
                android:paddingRight="30dp"/>

            <ImageView
                android:id="@+id/s_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/samaritans_tv"
                android:src="@mipmap/ic_call_black_48dp"
                android:layout_centerHorizontal="true"
                android:paddingRight="50dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/browser_1"
                android:src="@drawable/browser"
                android:paddingLeft="50dp"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_tv2"
                android:layout_centerHorizontal="true"
                android:text="Aware.ie"
                android:textColor="#34A180" />

            <ImageView
                android:id="@+id/a_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_call_black_48dp"
                android:paddingRight="50dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/browser_2"
                android:src="@drawable/browser"
                android:paddingLeft="50dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_tv2"
                android:layout_toEndOf="@+id/youtube_view"
                android:text="Grow.ie"
                android:textColor="#34A180" />

            <ImageView
                android:id="@+id/g_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:src="@mipmap/ic_call_black_48dp"
                android:paddingRight="50dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/browser_3"
                android:src="@drawable/browser"
                android:paddingLeft="50dp"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>
