<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_two"
    tools:context="com.example.x1243.littlethings.Mindfulness">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                app:srcCompat="@drawable/ll_logo" />

            <TextView
                android:id="@+id/introTextView"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="On this page you will find 3 audio tracks to help you relax in times of stress. Simply click the play button on the track that best fits your situation"
                android:textColor="#34A180"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/sosTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#34A180"
                android:layout_marginTop="31dp"
                android:text="SOS Mindfulness"
                android:layout_below="@+id/introTextView"
                android:layout_alignParentStart="true" />

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sosTitle"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/playButton1"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_play_arrow_black_48dp"
                android:layout_height="wrap_content"
                android:text="Play"
                android:layout_below="@+id/seekBar1"
                android:layout_marginStart="17dp" />

            <ImageView
                android:id="@+id/pauseButton1"
                android:src="@mipmap/ic_pause_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/playButton1"
                android:layout_centerHorizontal="true"
                android:text="Pause" />

            <ImageView
                android:id="@+id/stopButton1"
                android:src="@mipmap/ic_stop_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:layout_marginEnd="23dp"
                android:layout_below="@+id/seekBar1"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/medTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#34A180"
                android:layout_marginTop="31dp"
                android:text="Meditation "
                android:layout_below="@id/stopButton1"/>

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medTitle"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/playButton2"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_play_arrow_black_48dp"
                android:layout_height="wrap_content"
                android:text="Play"
                android:layout_below="@+id/seekBar2"
                android:layout_marginStart="17dp" />

            <ImageView
                android:id="@+id/pauseButton2"
                android:src="@mipmap/ic_pause_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/playButton2"
                android:layout_centerHorizontal="true"
                android:text="Pause" />

            <ImageView
                android:id="@+id/stopButton2"
                android:src="@mipmap/ic_stop_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:layout_marginEnd="23dp"
                android:layout_below="@+id/seekBar2"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/sleepTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#34A180"
                android:layout_marginTop="31dp"
                android:text="Sleep "
                android:layout_below="@id/stopButton2"/>

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sleepTitle"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/playButton3"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_play_arrow_black_48dp"
                android:layout_height="wrap_content"
                android:text="Play"
                android:layout_below="@+id/seekBar3"
                android:layout_marginStart="17dp" />

            <ImageView
                android:id="@+id/pauseButton3"
                android:src="@mipmap/ic_pause_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/playButton3"
                android:layout_centerHorizontal="true"
                android:text="Pause" />

            <ImageView
                android:id="@+id/stopButton3"
                android:src="@mipmap/ic_stop_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:layout_marginEnd="23dp"
                android:layout_below="@+id/seekBar3"
                android:layout_alignParentEnd="true" />



        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
